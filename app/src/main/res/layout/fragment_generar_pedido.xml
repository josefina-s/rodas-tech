<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Order.GenerarPedido">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/seleccionarCliente"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="349dp"
        android:layout_height="57dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:hint="@string/labelCliente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.288">

        <AutoCompleteTextView
            android:id="@+id/dropdownClientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            app:simpleItems="@array/simple_clientes" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txtProductosNewPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="228dp"
        android:fontFamily="sans-serif-medium"
        android:text="Productos"
        android:textColor="#023E8A"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/pedidosicon"
        app:layout_constraintStart_toEndOf="@+id/pedidoTxtLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pedidoTxtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="47dp"
        android:fontFamily="sans-serif-medium"
        android:text="Generar Nuevo Pedido"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAgregarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:backgroundTint="#FFF"
        android:text="agregar un producto"
        android:textAllCaps="false"
        android:textColor="#000"
        app:icon="@drawable/add"
        app:iconGravity="end"
        app:iconTint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seleccionarCliente" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewBtnConfirmar"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#A9EF90"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/productosPedido"
        app:layout_constraintStart_toStartOf="@+id/productosPedido"
        app:layout_constraintTop_toTopOf="@+id/productosPedido">

        <Button
            android:id="@+id/btnConfirmarPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Confirmar"
            android:textAllCaps="false"
            android:textColor="#FFF" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewBtnClear"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="200dp"
        app:cardBackgroundColor="#DD5050"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/productosPedido"
        app:layout_constraintStart_toStartOf="@+id/productosPedido"
        app:layout_constraintTop_toTopOf="@+id/productosPedido">

        <Button
            android:id="@+id/btnClearPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="#FFF" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productosPedido"
        android:layout_width="409dp"
        android:layout_height="385dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtErrorProductsOrder"
        android:layout_width="320dp"
        android:layout_height="22dp"
        android:textColor="#DD5050"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387" />

    <TextView
        android:id="@+id/txtErrorClientOrder"
        android:layout_width="317dp"
        android:layout_height="27dp"
        android:textColor="#DD5050"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265" />

    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:tint="@android:color/white"
        app:backgroundTint="#023E8A"
        app:layout_anchorGravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.1" />-->

</androidx.constraintlayout.widget.ConstraintLayout>