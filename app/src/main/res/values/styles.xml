<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#023E8A</item>
        <item name="colorPrimaryDark">#023E8A</item>
        <item name="colorAccent">#0077B6</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu</item>
        <!--<item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
